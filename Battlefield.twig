[center]

{# battlefield header #}
[img]http://i.imgur.com/Xb2X4je.png[/img]

[size=5][color=#00FF00][b][i][u]Division Leadership[/u][/i][/b][/color][/size]

[size=4]
{# iterate leaders #}
{% for leader in division.leaders %}
	[profile={{ leader.clan_id }}][color={{ leader.rank.color }}]{{ leader.present().rankName }}[/color][/profile] - {{ leader.position.name }}
{% endfor %}
[/size]

[size=3][color=#40E0D0]General Sergeants[/color]
{# iterate general sergeants #}
{% for sergeant in division.generalSergeants %}
	[profile={{ sergeant.clan_id }}][color={{ sergeant.rank.color }}]{{ sergeant.present().rankName }}[/color][/profile]
{% else %}
	No general sergeants assigned
{% endfor %}
[/size]

[/center]

{# iterate platoons #}
[table="width: 900, align: center"]
{% for platoon in division.platoons %}
	{% if (loop.first) %}
		[tr][td]
	{% else %}
		[td]
	{% endif %}
	
	[size=5]Platoon #{{ loop.index }}[/size]
	[size=3][i]
	{% if platoon.leader %}
		[color=#ff0000]{{ platoon.leader.present().rankName }}[/color]
	{% else %}
		[color=orange]LEADER TBA[/color]
	{% endif %}
	[/i][/size]
	
	{# iterate squads #}
	{% for squad in platoon.squads %}
		[size=3]
		{% if squad.leader %}
			[color=#40E0D0]Squad Leader[/color]
			[profile={{ squad.leader.clan_id }}]{{ squad.leader.present().rankName }}[/profile] -
			{% if squad.leader.handles[0] %}
				[url={{ squad.leader.handles[0].fullUrl }}][BC][/url]
			{% else %}
				XXX
			{% endif %}
		{% else %}
			[color=orange]TBA[/color]
		{% endif %}
		[/size]
		
		{# iterate squad members #}
		[size=1]
		{% for member in squad.members %}
			[profile={{ member.clan_id }}]{{ member.present().rankName }}[/profile] -
			{% if member.handles[0] %}
				[url={{ member.handles[0].fullUrl }}][BC][/url]
			{% else %}
				XXX
			{% endif %}
		{% endfor %}
		[/size]
	{% endfor %}
	[/td]
{% endfor %}
[/tr][/table]
