[table=align:center]
{% for platoon in division.platoons %}
[tr]
[td]
		{% if platoon.logo %}
			[img]{{ platoon.logo }}[/img][/center]
		{% endif %}

		[center][size=4][color=00FFFF]{{ platoon.name }}[/color][/size][/center]
		{% if platoon.leader %}
			[center][profile={{ platoon.leader.clan_id }}][color=white]{{platoon.leader.present().rankName }}[/color][/profile][/center]
		{% else %}
			[color=orange] LEADER TBA [/color]
		{% endif %}
[/td]
[/tr]
{% endfor %}
[/table]
