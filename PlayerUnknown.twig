	{% for sergeant in division.generalSergeants %}
		[profile={{ sergeant.clan_id }}][color={{ sergeant.rank_color }}]{{ sergeant.rankName }}[/color][/profile]
	{% endfor %}
{% else %}
	No general Sergeants assigned
