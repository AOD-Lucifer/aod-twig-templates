[table='align:center,width: 800'][tr][td]
[center]

{# battlefield header #}
[img]http://i.imgur.com/Xb2X4je.png[/img]

[size=5][color=#00FF00][b][i][u]Division Leadership[/u][/i][/b][/color][/size]

[size=4]
	{% for leader in division.leaders %}
		[profile={{ leader.rank_id }}][color={{ leader.rank.color }}]{{ leader.rankName }}[/color][/profile] - {{ leader.position.name }}
	{% endfor %}
[/size]

[size=3][color=#40E0D0]General Sergeants[/color]
	{% for sergeant in division.generalSergeants %}
		[profile={{ sergeant.clan_id }}][color={{ sergeant.rank_color }}]{{ sergeant.rankName }}[/color][/profile]
	{% endfor %}
[/size]


[/center]

[/td][/tr][/table]

{# end division leadership section #}



[table="width: 500, align: center"]
	[tr]

   		 {% for platoon in division.platoons %}

			[td]

				{# and this is a comment #}

				{% if platoon.logo is not null %}
					[center][img]{{ platoon.logo }}[/img][/center]
				{% else %}
					No logo
				{% endif %}
				<br />

				Platoon #{{ loop.index }}<br />
				{% if platoon.leader is not null %}
					[color=#ff0000]  {{ platoon.leader.present().rankName }}   [/color]
				{% else %}
					[color=orange]LEADER TBA[/color]
				{% endif %}

				{% for squad in platoon.squads %}
					Squad #{{ loop.index }}<br />
		
						{% for member in squad.members %}
							{{ member.present().rankName }}<br />
						{% endfor %}

				{% endfor %}

			[/td]	

       		 {% endfor %}
	[/tr]
[/table]
