{% set max_platoons = 3 %}
[table='align:center,width: 800'][tr][td][center][img]http://i.imgur.com/QZW3kW9.png[/img]

[size=5][color=#FF0000][b][i][u]Division Leaders[/u][/i][/b][/color][/size]

[size=4]
{# iterate leaders #}
{% for leader in division.leaders %}
	[profile={{ leader.clan_id }}][color={{ leader.rank.color }}]{{ leader.present().rankName }}[/color][/profile] - {{ leader.position.name }}[url={{ leader.handles[0].fullUrl }}][color=#00ff00]⟹[/color][/url]
{% else %}
	TBA
{% endfor %}
[/size]

[size=3][color=#40E0D0]General Sergeants[/color]
{# Iterate General Sergeants #}
{% if division.generalSergeants %}
	{% for sergeant in division.generalSergeants %}
		[profile={{ sergeant.clan_id }}][color={{ sergeant.rank.color }}]{{ sergeant.present().rankName }}[/color][/profile][url={{ sergeant.handles[0].fullUrl }}][color=#00ff00]⟹[/color][/url]
	{% endfor %}
{% else %}
	No general sergeants assigned
{% endif %}
[/size]

[/center]

[/td][/tr][/table]

{% set max_platoons = 3 %}

[table='align:center,width: 900'][tr]
{% for platoon in division.platoons %}
[td]
	{% if platoon.logo %}
		[center][img]{{ platoon.logo }}[/img][/center]
	{% else %}

	{% endif %}
	
    {% if platoon.name %}
    	[size=5][color=ffff00]{{ platoon.name }}[/color][/size]
    {% else %}
    	[color=ffff00]Untitled[/color]
    {% endif %}
    
    [size=3][color=#40E0D0]Wing {{ loop.index }} Commander[/color]
	{% if platoon.leader %}
			[profile={{ platoon.leader.clan_id }}][color=#00FF00]{{ platoon.leader.present().rankName }}[/color][/profile] [url={{ platoon.leader.handles[0].fullUrl }}][color=#00ff00]⟹[/color][/url]
    {% else %}
		[color=#00FF00]TBA[/color]
	{% endif %}
    [/size]

	{# iterate squads #}
	{% for squad in platoon.squads %}
		{% if squad.name %}
        	[size=4][color=ffff00]{{ squad.name }}[/color][/size]
        {% else %}
        	[size=4][color=ffff00]Untitled[/color][/size]
        {% endif %}
        
        [size=3][color=#40E0D0]Squadron {{ loop.index}} Commander[/color]
        {% if squad.leader %}
        		[profile={{ squad.leader.clan_id }}][color=#FFA500]{{ squad.leader.present().rankName }}[/profile][/color][url={{ squad.leader.handles[0].fullUrl }}][color=#00ff00]⟹[/color][/url]
        {% else %}
        	[color=#FFA500]TBA[/color]
        {% endif %}
        [/size]
            
		{# iterate squad members #}
		{% for member in squad.members %}
			[profile={{ member.clan_id }}]{{ member.present().rankName }}[/profile][url={{ member.handles[0].fullurl }}][color=#00ff00]⟹[/color][/url]
		{% endfor %}
        
	{% endfor %}

	{% if loop.index is divisible by(max_platoons) %}
		[/td][/tr][tr]
	{% else %}
		[/td]
	{% endif %}

{% endfor %}
[/tr][/table]
