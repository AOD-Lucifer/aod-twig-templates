        	[profile={{ squad.leader.clan_id }}]{{ squad.leader.present().rankName }}[/profile]
    	{% else %}
    	    TBA
    	{% endif %}
        [/size]  
   		[size=2][left][list]       
        {% for member in squad.members %}
        	[*][profile={{ member.clan_id }}]{{ member.present().rankName }}[/profile]
        {% endfor %}
